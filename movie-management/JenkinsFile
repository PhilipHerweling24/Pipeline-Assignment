pipeline {
    agent any

    environment {
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PhilipHerweling24/Pipeline-Assignment.git'
            }
        }

        stage('Build') {
            steps {
                dir('movie-management') {
                    echo 'Building the project...'
                    bat "mvn clean compile"
                }
            }
        }

        stage('Unit & Integration Tests') {
            steps {
                dir('movie-management') {
                    echo 'Running unit & integration tests...'
                    bat "mvn test"
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Karate Tests') {
            steps {
                dir('movie-management') {
                    echo 'Running Karate tests...'
                    bat "mvn test -Dkarate.options=\"--tags @smoke\""
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Code Coverage') {
            steps {
                dir('movie-management') {
                    echo 'Generating JaCoCo report...'
                    bat "mvn jacoco:report"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('movie-management') {
                    withSonarQubeEnv('sonarqube') {
                        bat """
                        mvn sonar:sonar ^
                            -Dsonar.projectKey=pipeline-assignment ^
                            -Dsonar.projectName="Movie Management API" ^
                            -Dsonar.projectVersion=1.0 ^
                            -Dsonar.projectBaseDir=movie-management ^
                            -Dsonar.sources=src/main/java ^
                            -Dsonar.tests=src/test/java ^
                            -Dsonar.coverage.jacoco.xmlReportPaths=target/site/jacoco/jacoco.xml ^
                            -Dsonar.language=java ^
                            -Dsonar.sourceEncoding=UTF-8 ^
                            -Dsonar.host.url=http://localhost:9000 ^
                            -Dsonar.scm.disabled=true ^
                            -Dsonar.exclusions=**/*.test.*,**/test/** ^
                            -Dsonar.java.binaries=target/classes ^
                            -Dsonar.login=sqa_f12ad9b340d9d1501e892bd1520b4214e5b2c00e
                        """
                    }
                }
            }
        }

        stage('Package') {
            steps {
                dir('movie-management') {
                    echo 'Packaging the application...'
                    bat "mvn package"
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished.'
        }
        failure {
            echo 'Build failed.'
        }
    }
}



